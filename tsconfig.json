{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["jest", "node"],
    "allowSyntheticDefaultImports": true,
  },
  "include": ["src/**/*.ts", "src/database/config/database.ts"],
  "exclude": ["node_modules", "dist"]
}